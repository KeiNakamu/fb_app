<p id="notice"><%= notice %></p>

<h1>Pictures</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= image_tag picture.image.url if picture.image.present? %></td>
        <td><%= picture.content %></td>
        <td><%= picture.user.name %></td>
        <td><%= button_to '詳細', picture, method: :get %></td>
        <td><%= button_to '編集', edit_picture_path(picture.id), method: :get %></td>
        <td><%= button_to '削除', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to '投稿', new_picture_path, method: :get %>
